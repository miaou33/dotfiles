#~~~~~~~~~~~~~~~~~~~~#
#	    DEFINES		 #
#~~~~~~~~~~~~~~~~~~~~#
set $mod Mod4
set $alt Mod1
set $term --no-startup-id alacritty
set $browser --no-startup-id firefox


#~~~~~~~~~~~~~~~~~~~~#
#		GENERAL		 #
#~~~~~~~~~~~~~~~~~~~~#
exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
#exec --no-startup-id xautolock -time 10 -locker blurlock

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart


#~~~~~~~~~~~~~~~~~~~~#
#		 APPS		 #
#~~~~~~~~~~~~~~~~~~~~#
bindsym $mod+a exec "rofi -modi drun,run -show drun"

# general shortcuts
# exec --no-startup-id sxhkd -c ~/.config/sxhkd/sxhkdrc &

bindsym $mod+Return exec $term 
bindsym $mod+w exec $browser
bindsym $mod+d exec --no-startup-id discord
bindsym $mod+c exec --no-startup-id Emacsclient

# network manager
exec --no-startup-id nm-applet


#~~~~~~~~~~~~~~~~~~~~#
#		DISPLAY		 #
#~~~~~~~~~~~~~~~~~~~~#
exec --no-startup-id picom
#exec_always --no-startup-id xrandr --ouput HDMI-1 --auto --right-of eDP-1
exec --no-startup-id ~/.fehbg &
exec_always --no-startup-id ~/.config/polybar/launch.sh -r &
bindsym $mod+b exec --no-startup-id "polybar-msg cmd toggle"

#default_border pixel 2
for_window [class=".*"] border pixel 1
gaps inner 5 
gaps outer 5 

bindsym XF86MonBrightnessUp exec brillo -A 5
bindsym XF86MonBrightnessDown exec brillo -U 5
bindsym Print exec --no-startup-id scrot -e 'mv $f ~/Pictures/Screenshots'

