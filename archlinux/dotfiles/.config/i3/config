# Screenshot
#bindsym --release Print exec scrot '~/Pictures/Screenshots/screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Pictures/Screenshots && mv $f ~/Pictures/Screenshots' 
